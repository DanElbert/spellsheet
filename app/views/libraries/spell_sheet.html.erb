<h1><%= @spell_book.name %></h1>
<h2><%= @spell_book.klass.name %></h2>

<% @spell_levels.each do |level, spell_hash| %>
  <div class="level_heading">Level <%= level %> Spells</div>
  <% split_index = (spells.size / 2.0).ceil %>
  <% spells = spell_hash.values %>
  <div class="left_container">
  <% spells.each_with_index do |ks, i| %>
    <% if i == split_index %>
      </div><div class="right_container">
    <% end %>
    <div class="spell_prep_block">
      <% (1..3).each do %>
        <div class="checkbox"></div>
      <% end %>
      <span class="name"><%= ks.spell.name %></span>
      (<span class="components"><%= ks.spell.short_components %></span>)<br />
      <span class="description"><%= (ks.spell.short_description || "").strip %></span>
    </div>
  <% end %>
  </div>
  <br class="no_float" />
<% end %>
