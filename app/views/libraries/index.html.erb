<h2>Libraries</h2>

<table>
  <tr>
    <th>Name</th>
    <th>Class</th>
    <th></th>
  </tr>

<% @libraries.each do |library| %>
  <tr>
    <td><%= link_to library.name, library %></td>
    <td><%= library.klass.name %></td>
    <td><%= link_to 'Destroy', library, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Library', new_library_path, class: 'button' %>
