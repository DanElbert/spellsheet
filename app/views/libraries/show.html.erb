
<h2><%= @library.name %> [<%= @library.klass.name %>]</h2>

<h3>Books</h3>
<table>
  <tr>
    <th>Name</th>
    <th>Pages</th>
    <th></th>
    <th></th>
  </tr>
  <% @library.spell_books.each do |book| %>
      <tr>
        <td><%= link_to book.name, spell_book_path(book) %></td>
        <td><%= book.formatted_pages %></td>
        <td><%= link_to 'Edit', edit_spell_book_path(book) %></td>
        <td><%= link_to 'Remove', book, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
</table>

<br />
<%= link_to "Add Book", new_spell_book_path(:library_id => @library.id), method: :post, class: 'button' %>
<br/>

<%= link_to 'Print Spell Sheet', spell_sheet_library_path(@library) %> |
<%= link_to 'View Spell Sheet', spell_sheet_library_path(@library, :format => :html) %>
<br/><br/>
<%= link_to 'Back to Libraries', libraries_path %>
